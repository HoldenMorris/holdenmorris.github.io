{
  "name": "holden-morris-portfolio",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "Personal portfolio website for Holden Morris",
  "scripts": {
    "setup:icons": "mkdir -p public/shoelace/assets && cp -r node_modules/@shoelace-style/shoelace/dist/assets/icons public/shoelace/assets/",
    "dev": "npm run setup:icons && vite",
    "build": "npm run setup:icons && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "vite": "^6.1.0",
    "vitest": "^3.0.0",
    "happy-dom": "^17.0.0"
  },
  "dependencies": {
    "lit": "^3.2.0",
    "@lit/context": "^1.1.0",
    "@shoelace-style/shoelace": "^2.19.0"
  }
}
